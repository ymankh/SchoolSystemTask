@model TModel

<div class="chat-box bg-white">
    <div
        class="chat-header bg-primary text-white"
        data-bs-toggle="collapse"
        data-bs-target="#chat-body"
        aria-expanded="true">
        <div class="d-flex align-items-center">
            <img src="~/assets/img/team-5.jpg" alt="User Image"/>
            <span>Sara Ahmad</span>
        </div>
        <i class="fas fa-chevron-down collapse-icon"></i>
    </div>

    <div id="chat-body" class="collapse show">
        <div class="chat-body p-3">
            <!-- Chat messages will appear here -->
            <div class="chat-message bg-light p-2 mb-2 rounded">
                Hello! Can we chat?
            </div>
            <div class="chat-message bg-primary p-2 mb-2 rounded text-white">
                No! I don't talk to strangers!
            </div>
        </div>
        <div class="chat-footer">
            <div class="chat-input-group">
                <input
                    type="text"
                    class="form-control chat-input"
                    placeholder="Type a message..."/>
                <i class="fas fa-paper-plane send-icon text-primary"></i>
            </div>
        </div>
    </div>
</div>