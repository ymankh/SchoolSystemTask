@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet" />

    <title>TalimPro - School Management System</title>

    <!-- Bootstrap core CSS -->
    <link href="/scholar-1.0.0/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/scholar-1.0.0/assets/css/custom-bootstrap.css" rel="stylesheet" />

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/scholar-1.0.0/assets/css/fontawesome.css" />
    <link rel="stylesheet" href="/scholar-1.0.0/assets/css/templatemo-scholar.css" />
    <link rel="stylesheet" href="/scholar-1.0.0/assets/css/owl.css" />
    <link rel="stylesheet" href="/scholar-1.0.0/assets/css/animate.css" />
    <link rel="stylesheet"
          href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/scholar-1.0.0/assets/css/style.css" />
    <style>
        .sign-in-up {
            min-height: 100vh;
        }

        #top {
            position: absolute;
            z-index: 1000;
        }

        footer {
            z-index: 1000;
        }

        .card {
            border-radius: 25px;
        }
    </style>
</head>

<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Action("HomePage" ,"Home")" class="logo">
                            <h1>TalimPro</h1>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section">
                                <a href="@Url.Action("HomePage" ,"Home")" class="active">Home</a>
                            </li>
                            <li class="scroll-to-section">
                                <a href="@Url.Action("HomePage" ,"Home")#services">Services</a>
                            </li>
                            <li class="scroll-to-section">
                                <a href="@Url.Action("HomePage" ,"Home")#plans">Plans</a>
                            </li>
                            <li class="scroll-to-section">
                                <a href="@Url.Action("HomePage" ,"Home")#contact">Contact Us</a>
                            </li>
                            <!-- <li class="scroll-to-section">
                              <a href="aboutUs.html">About Us</a>
                            </li> -->
                            <li class="scroll-to-section">
                                <a>
                                    <button type="button" class="btn text-white">Login</button>
                                </a>
                            </li>
                        </ul>
                        <a class="menu-trigger" href="@Url.Action("HomePage" ,"Home")">
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="main-banner" id="top"></div>
    <div class="container-fluid m-0 p-0">
        <!-- start of sign-in-up -->
        <div class="sign-in-up d-flex justify-content-center align-items-center"
             style="
          background-image: url(/scholar-1.0.0/assets/images/banner-item-02.jpg);
          background-repeat: no-repeat;
          background-size: cover;
        ">
            <div class="card" style="min-width: 50%; max-width: 200px">
                <div class="card-header text-center p-4">
                    <h4>Login</h4>
                </div>
                <div class="card-body p-3 p-md-5">
                    <form action="@Url.Action("LoginPage", "Home")" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email"
                                   name="email"
                                   id="email"
                                   class="form-control"
                                   value="" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password"
                                   name="password"
                                   id="password"
                                   class="form-control" />
                        </div>
                        <div class="form-group my-3 d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary text-white">
                                Login
                            </button>
                        </div>
                        <div class="text-center text-muted">
                            do not have an account? <a href="@Url.Action("RegisterPage", "Home")">Sign Up </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/scholar-1.0.0/vendor/jquery/jquery.min.js"></script>
    <script src="/scholar-1.0.0/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/scholar-1.0.0/assets/js/isotope.min.js"></script>
    <script src="/scholar-1.0.0/assets/js/owl-carousel.js"></script>
    <script src="/scholar-1.0.0/assets/js/counter.js"></script>
    <script src="/scholar-1.0.0/assets/js/custom.js"></script>
</body>
</html>
