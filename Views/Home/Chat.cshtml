@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row min-vh-80">
        <!-- Sidebar -->
        <div class="col-md-4 col-lg-3 border-end d-none d-md-block">
            <div class="d-flex align-items-center p-3">
                <h2>Chats</h2>
                <div class="ms-auto">
                    <button class="btn btn-light">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                    <button class="btn btn-light">
                        <i class="bi bi-gear"></i>
                    </button>
                </div>
            </div>
            <div class="chat-list">
                <ul class="list-group list-group-flush">
                    <!-- Chat List Item -->
                    <li class="list-group-item d-flex align-items-center">
                        <img src="../assets/img/team-1.jpg"
                             width="50"
                             height="50"
                             class="rounded-circle me-3"
                             alt="User" />
                        <div>
                            <h5 class="mb-0">Somia</h5>
                            <small class="text-muted">Form the 7th grade</small>
                        </div>
                    </li>
                    <li class="list-group-item d-flex align-items-center">
                        <img src="../assets/img/team-2.jpg"
                             width="50"
                             height="50"
                             class="rounded-circle me-3"
                             alt="User" />
                        <div>
                            <h5 class="mb-0">Khaled</h5>
                            <small class="text-muted">Ahmad parent from 7th grade</small>
                        </div>
                    </li>

                    <!-- Repeat for more chats -->
                </ul>
            </div>
        </div>
        <!-- Chat Area -->
        <div class="col-md-8 col-lg-9 d-flex flex-column">
            <!-- Chat Header -->
            <div class="d-flex align-items-center p-3 border-bottom">
                <img src="../assets/img/team-1.jpg"
                     width="50"
                     height="50"
                     class="rounded-circle me-3"
                     alt="User" />
                <div>
                    <h5 class="mb-0">Somia</h5>
                    <small class="text-muted">Active now</small>
                </div>
                <div class="ms-auto">
                    <button class="btn btn-light">
                        <i class="fa fa-info-circle"></i>
                    </button>
                </div>
            </div>
            <!-- Chat Messages -->
            <div class="chat-messages flex-grow-1 p-3 overflow-auto">
                <!-- Sent Message -->
                <div class="d-flex flex-column mb-3">
                    <div class="message sent align-self-end">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <p class="mb-0">Hello, how are you?</p>
                            </div>
                        </div>
                        <small class="text-muted mt-1">Just now</small>
                    </div>
                </div>
                <!-- Received Message -->
                <div class="d-flex flex-column mb-3">
                    <div class="message received">
                        <div class="card">
                            <div class="card-body">
                                <p class="mb-0">I'm good, thanks! How about you?</p>
                            </div>
                        </div>
                        <small class="text-muted mt-1">Just now</small>
                    </div>
                </div>
                <!-- Add more messages as needed -->
            </div>
            <!-- Message Input -->
            <div class="message-input border-top">
                <div class="input-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Type a message" />
                    <button class="btn btn-primary">
                        <i class="fa fa-send"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

