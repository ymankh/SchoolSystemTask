@model dynamic

@{
    ViewBag.Title = "Chat";
    Layout = "_TeacherLayout";
}

@section ExtraStyles
{
    <style>
        body,
        html {
            height: 100%;
        }

        .chat-list {
            height: 100%;
            overflow-y: auto;
        }

        .chat-messages {
            height: calc( 100% - 56px ); /* Adjust based on header and input heights */
            overflow-y: auto;
        }

        .message-input {
            height: 56px;
        }

        .message {
            max-width: 75%;
        }

            .message.sent {
                margin-left: auto;
            }

            .message.received {
                margin-right: auto;
            }

            .message .card-body {
                padding: 0.5rem;
            }

        .chat-container {
            height: 100%;
        }
    </style>
}

